<div class="cor">
  <div>
    <h2>
      create post
    </h2>
  </div>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
   
    <div class="carousel-inner">
      <div class="carousel-item iteme active">
        <img class="d-block w-100 imagesss" src="../media/project-show.jpeg" alt="First slide">
        <p style="padding: 3px; margin:5px;">
          Upload your project for better reach and expose your talent..
        </p>
        <% if(currentUser){ %> 
        <form action="/posts/newProject">
          <button class="post-butt">Project</button>
        </form>
        <% }else { %>
          <form action="/users/login">
          <button class="post-butt">Project</button>
        </form>
        <% } %>  
      </div>
      
      <div class="carousel-item iteme">
        <img class="d-block w-100 imagesss" src="../media/paper-show.jpg" alt="Second slide">
        <p style="padding: 3px; margin:5px;">
          Post your published paper or your ongoing paper...
        </p>
        <% if(currentUser){ %> 
        <form action="/posts/newPaper">
          <button class="post-butt">Publish Paper</button>
        </form>
        <% }else { %>
          <form action="/users/login">
          <button class="post-butt">Publish Paper</button>
        </form>
        <% } %>  
      </div>

      <div class="carousel-item iteme">
        <img class="d-block w-100 imagesss" src="../media/event162.jpg" alt="Third slide">
        <p style="padding: 3px; margin:5px;">
          Tell that you are hosting a event to every one
        </p>
        <% if(currentUser){ %> 
        <form action="/posts/newEvent">
          <button class="post-butt">Bang Event</button>
        </form>
        <% }else { %>
          <form action="/users/login">
          <button class="post-butt">Bang Event</button>
        </form>
        <% } %>  
      </div>
      <div class="carousel-item iteme">
        <img class="d-block w-100 imagesss" src="../media/idea-show.gif" alt="Fourth slide">
        <p style="padding: 3px; margin:5px;">
          Every one has ideas but the one who expresses it first gets the credit first...
        </p>
        <% if(currentUser){ %> 
        <form action="/posts/newIdea">
          <button class="post-butt">Share Idea</button>
        </form>
        <% }else { %>
          <form action="/users/login">
          <button class="post-butt">Share Idea</button>
        </form>
        <% } %>  
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </a>
  </div>
</div>






